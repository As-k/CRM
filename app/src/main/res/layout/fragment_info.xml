<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/project_color"
    tools:context="com.cioc.crm.InfoFragment">

    <ScrollView android:id="@+id/contacts_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:scrollbarStyle="outsideOverlay"
        android:paddingLeft="@dimen/cardCornerRadius"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="2dp">

            <TextView
                style="@style/text_view_style"
                android:id="@+id/info_company"
                android:text="First Choice Yard Help"
                android:layout_gravity="left"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:layout_marginLeft="35dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="3dp"
                >

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="left"
                    android:src="@drawable/ic_location"
                    android:id="@+id/info_iv_address"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="left"

                    >
                    <TextView
                        style="@style/text_view_style"
                        android:id="@+id/info_tv_address"
                        android:text="2426 Pritchard Court"
                        android:layout_gravity="left"
                        android:textSize="12dp"
                        android:textAlignment="gravity"
                        android:textColor="@color/black"
                        android:layout_margin="2dp"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                style="@style/text_view_style"
                android:text="In Network"
                android:layout_gravity="left"
                android:textSize="12dp"
                android:textColor="@color/gray"
                android:layout_marginTop="20dp"
               />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                >

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/male"
                    android:id="@+id/info_frnd_img"/>

                <TextView
                    style="@style/text_view_style"
                    android:id="@+id/info_frnd_name"
                    android:text="Robert Y. Griffin"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="3dp"
                    android:layout_toEndOf="@+id/info_frnd_img"
                    android:textColor="#3c4650"
                    />

            </RelativeLayout>
        </LinearLayout>

    </ScrollView>

</FrameLayout>
