<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/browse_cardView"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/project_color"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="2dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/contacts_image"
                android:src="@drawable/ic_launcher_background"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:id="@+id/nea_tv_categories"
                    style="@style/text_view_style"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:text="Categories"
                    android:textColor="#000" />
                <TextView
                    android:id="@+id/tv_categories"
                    style="@style/text_view_style"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:text="Categories"
                    android:textColor="#000" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/nea_tv_vendor"
            style="@style/text_view_style"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Vendor"
            android:textColor="#000"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"/>

        <TextView
            style="@style/text_view_style"
            android:id="@+id/nea_tv_date"
            android:text="01-March-2018"
            android:textColor="#5c6166"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            />

    </LinearLayout>

</android.support.v7.widget.CardView>


