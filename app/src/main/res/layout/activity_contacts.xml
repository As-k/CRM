<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/project_color"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/tl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabBackground="@color/text_color"
        app:tabIndicatorColor="@color/project_color"
        app:tabSelectedTextColor="@color/project_color"
        app:tabTextColor="#b8bcc1">

        <android.support.design.widget.TabItem
            style="@style/text_view_style"
            android:text="New" />

        <android.support.design.widget.TabItem
            style="@style/text_view_style"
            android:text="Browse" />

    </android.support.design.widget.TabLayout>

    <fragment
        android:id="@+id/home_fg"
        class="com.cioc.crm.NewContactFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>