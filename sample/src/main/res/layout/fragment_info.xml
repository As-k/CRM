<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/project_color"
    tools:context="com.woxthebox.draglistview.sample.contacts.InfoFragment">

    <ScrollView android:id="@+id/contacts_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:scrollbarStyle="outsideOverlay"
        android:paddingLeft="@dimen/cardCornerRadius"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="2dp">

            <!-- TODO: Update blank fragment layout -->

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/info_image"
                android:layout_alignParentRight="true"
                app:civ_border_color="#ffffff"
                app:civ_border_width="2dp"
                />


            <TextView
                style="@style/text_view_style"
                android:text="Organisation"
                android:layout_gravity="left"
                android:textSize="15dp"
                android:textColor="#666161"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/ic_organisation"
                android:drawablePadding="3dp"/>

            <TextView
                style="@style/text_view_style"
                android:id="@+id/info_company"
                android:text="First Choice Yard Help"
                android:layout_gravity="left"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_margin="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="3dp"
                >

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="left"
                    android:src="@drawable/ic_location"
                    android:id="@+id/info_iv_address"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="left"

                    >
                    <TextView
                        style="@style/text_view_style"
                        android:id="@+id/info_tv_address"
                        android:text="2426 Pritchard Court
Windson
MN
56101
US"
                        android:layout_gravity="left"
                        android:textSize="15dp"
                        android:textColor="#000000"
                        />

                </LinearLayout>

            </LinearLayout>

            <TextView
                style="@style/text_view_style"
                android:text="In Network"
                android:layout_gravity="left"
                android:textSize="15dp"
                android:textColor="#666161"
                android:layout_marginTop="20dp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/info_frnd_img"
                    android:src="@drawable/male"
                    app:civ_border_color="#ffffff"
                    app:civ_border_width="2dp"
                    />


                <TextView
                    style="@style/text_view_style"
                    android:id="@+id/info_frnd_name"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="3dp"
                    android:layout_toEndOf="@+id/info_frnd_img"
                    android:textColor="#3c4650"
                    />

            </RelativeLayout>
        </LinearLayout>

    </ScrollView>

</FrameLayout>
