<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal">
    <android.support.v7.widget.CardView
        android:id="@+id/item_card"
        android:layout_marginTop="10dp"
        android:layout_width="250dp"
        android:layout_height="120dp"
        app:cardBackgroundColor="#f1f1f1"
        android:layout_marginLeft="10dp">
        <RelativeLayout
            android:id="@+id/item_relative"
            android:layout_width="match_parent"
            android:layout_height="120dp">
            <TextView
                android:id="@+id/comp_name"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comp Name"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/pk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="pk"
                android:layout_toRightOf="@+id/comp_name"
                android:layout_marginLeft="20dp"/>
            <ImageView
                android:id="@+id/image_account"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="33dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/ic_account_white" />
            <TextView
                android:id="@+id/emp_title"
                android:text="opp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="33dp"
                android:layout_toRightOf="@+id/image_account"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageClient"
                android:layout_marginTop="65dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:src="@drawable/male_circle"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp" />
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginTop="75dp"
                android:layout_toRightOf="@+id/imageClient"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:text="name"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

        </RelativeLayout>

