<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="@dimen/activity_vertical_margin">

        <!--<TextView-->
        <!--style="@style/text_view_style"-->
        <!--android:layout_gravity="left"-->
        <!--android:text="When"-->
        <!--android:textSize="15dp"-->
        <!--android:textColor="#000000"/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:gravity="center"
            android:orientation="horizontal">

            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/schedule_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_date"
                    android:ems="10"
                    android:hint="Date"
                    android:inputType="date"
                    android:keyboardNavigationCluster="true" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/schedule_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_time"
                    android:ems="10"
                    android:hint="Time"
                    android:inputType="time"
                    android:keyboardNavigationCluster="false" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <TextView
            style="@style/text_view_style"
            android:layout_gravity="left"
            android:text="Other stakeholders"
            android:textColor="@color/text_color"
            android:textSize="15dp" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <me.originqiu.library.EditTag
                android:id="@+id/edit_tag_view_crm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:input_layout="@layout/auto_crm_view_sample_input_tag"
                app:tag_layout="@layout/view_sample_tag" />
            <!--<TextView-->
            <!--android:id="@+id/chip_list_ip"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="16dp"/>-->

        </LinearLayout>

        <TextView
            style="@style/text_view_style"
            android:layout_gravity="left"
            android:text="Internal People"
            android:textColor="@color/text_color"
            android:textSize="15dp" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <me.originqiu.library.EditTag
                android:id="@+id/edit_tag_view_ip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:input_layout="@layout/auto_view_sample_input_tag"
                app:tag_layout="@layout/view_sample_tag" />

            <!--<TextView-->
            <!--android:id="@+id/chip_list_ip"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="16dp"/>-->

        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/schedule_loction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Location"
                android:inputType="text" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/schedule_event_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Event Details"
                android:inputType="text" />
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/schedule_cancel"
                style="@style/button_style"
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="Cancel" />

            <Button
                android:id="@+id/schedule_save"
                style="@style/button_style"
                android:layout_width="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="Save" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>