<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.woxthebox.draglistview.sample.relationships.AddQuoteActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--<ScrollView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_weight="1"-->
            <!--&gt;-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/download_quote_layout"
            android:background="@color/colorPrimary"
            android:padding="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/download_quote"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_download_white"
                />


        </RelativeLayout>

            <HorizontalScrollView
                android:id="@+id/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary">
                        <TableRow
                            android:layout_margin="5dp">
                            <TextView
                                style="@style/table_text_view_style"
                                android:layout_weight="1"
                                android:text="Description"
                                android:layout_margin="5dp"
                                />
                            <TextView
                                style="@style/table_text_view_style"
                                android:layout_weight="1"
                                android:layout_margin="5dp"
                                android:text="Type"
                                />

                            <TextView
                                style="@style/table_text_view_style"
                                android:layout_weight="1"
                                android:layout_margin="5dp"
                                android:text="Price" />
                            <TextView
                                style="@style/table_text_view_style"
                                android:layout_weight="1"
                                android:layout_margin="5dp"
                                android:text="Tax Rate"
                                />
                            <TextView
                                style="@style/table_text_view_style"
                                android:layout_weight="1"
                                android:layout_width="100dp"
                                android:text="HSN/SAC code"
                                android:layout_margin="5dp"
                                />
                            <TextView
                                style="@style/table_text_view_style"
                                android:layout_weight="1"
                                android:text=" Quantity "
                                android:layout_margin="5dp"
                                />
                            <TextView
                                style="@style/table_text_view_style"
                                android:layout_weight="1"
                                android:text="Total tax"
                                android:layout_margin="5dp"
                                />
                            <TextView
                                style="@style/table_text_view_style"
                                android:layout_weight="1"
                                android:text="Sub Total"
                                android:layout_margin="5dp"
                                />

                            <TextView
                                style="@style/table_text_view_style"
                                android:layout_weight="1"
                                android:text=""
                                android:layout_margin="5dp"
                                />

                        </TableRow>


                    </TableLayout>

                    <ListView
                        android:id="@+id/quote_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                    </ListView>
                    <!--<LinearLayout-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:orientation="vertical">-->
                        <!--<TextView-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:id="@+id/total_price"-->
                            <!--android:layout_gravity="left"-->
                            <!--android:text="Total : 1400 "-->
                            <!--android:paddingStart="10dp"-->
                            <!--android:layout_margin="2dp"-->
                            <!--android:textColor="@color/colorAccent"-->
                            <!--/>-->
                        <!--<TextView-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:id="@+id/total_tax"-->
                            <!--android:layout_gravity="left"-->
                            <!--android:text="tax : 2520  "-->
                            <!--android:paddingStart="10dp"-->
                            <!--android:layout_margin="2dp"-->
                            <!--android:textColor="@color/colorAccent"-->
                            <!--/>-->
                        <!--<TextView-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:id="@+id/grand_total_price"-->
                            <!--android:layout_gravity="left"-->
                            <!--android:text="Grand total : 16520"-->
                            <!--android:paddingStart="10dp"-->
                            <!--android:layout_margin="2dp"-->
                            <!--android:textColor="@color/colorAccent"-->
                            <!--/>-->
                    <!--</LinearLayout>-->
                </LinearLayout>
            </HorizontalScrollView>


        <!--</ScrollView>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="vertical"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorPrimary"
                android:layout_marginBottom="5dp"/>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:id="@+id/til_product_service"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">
                    <AutoCompleteTextView
                        android:layout_width="match_parent"
                        android:id="@+id/product_service"
                        android:hint="Product/Service class"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:textSize="13dp"
                        android:gravity="top"
                        style="@style/edit_text_style"/>
                </android.support.design.widget.TextInputLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll_product"
                android:gravity="center|left"
                android:orientation="horizontal">
                <TextView
                    style="@style/text_view_style"
                    android:id="@+id/product_class_txt"
                    android:layout_gravity="center"
                    android:text="Product/Service class "
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textColor="@color/colorAccent"
                    />

                <Button
                    android:paddingStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textSize="13dp"
                    android:id="@+id/product_class_btn"
                    style="?android:attr/borderlessButtonStyle"
                    android:text="Edit"
                    android:textAllCaps="false"
                    android:drawableRight="@drawable/ic_edit"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll_product_list"
                android:gravity="center|left"
                android:orientation="vertical">
                <TextView
                    style="@style/text_view_style"
                    android:id="@+id/product_txt"
                    android:layout_gravity="left"
                    android:layout_margin="2dp"
                    android:text="Information technology (IT) design and development services "
                    android:paddingStart="10dp"
                    android:textColor="@color/colorAccent"
                    />
                <TextView
                    style="@style/text_view_style"
                    android:id="@+id/product_code_type"
                    android:layout_gravity="left"
                    android:text="Code Type : SAC "
                    android:paddingStart="10dp"
                    android:layout_margin="2dp"
                    android:textColor="@color/colorAccent"
                    />
                <TextView
                    style="@style/text_view_style"
                    android:id="@+id/product_code"
                    android:layout_gravity="left"
                    android:text="Code : 998314 "
                    android:layout_margin="2dp"
                    android:paddingStart="10dp"
                    android:textColor="@color/colorAccent"
                    />
                <TextView
                    style="@style/text_view_style"
                    android:id="@+id/product_tax_rate"
                    android:layout_gravity="left"
                    android:text="Tax Rate :18"
                    android:layout_margin="2dp"
                    android:paddingStart="10dp"
                    android:textColor="@color/colorAccent"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                >

                <android.support.design.widget.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_width="match_parent"
                        android:id="@+id/quantity"
                        android:hint="Quantity"
                        android:text="0"
                        android:digits="0123456789"
                        android:textSize="13dp"
                        android:inputType="numberDecimal"
                        style="@style/edit_text_style"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_width="match_parent"
                        android:id="@+id/currency"
                        android:hint="Currency"
                        android:textSize="13dp"
                        android:text="INR"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        style="@style/edit_text_style"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_gravity="center"
                >
                <android.support.design.widget.TextInputLayout
                    android:layout_width="100dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/rate"
                        style="@style/edit_text_style"
                        android:layout_width="match_parent"
                        android:digits="0123456789"
                        android:hint="Rate"
                        android:textSize="13dp"
                        android:inputType="numberDecimal"
                        android:text="0" />
                </android.support.design.widget.TextInputLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_gravity="center"

                    >
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:textSize="13dp"
                        android:textAlignment="center"
                        android:gravity="center_vertical"
                        android:text="Type"
                        android:textColor="@color/colorAccent"
                        />

                    <Spinner
                        android:id="@+id/type_spinner"
                        android:layout_width="100dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:spinnerMode="dropdown"
                        android:scrollbarSize="12dp"/>
            </LinearLayout>
            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:id="@+id/description"
                    android:hint="Description"
                    android:paddingTop="5dp"
                    android:textSize="13dp"
                    android:background="@null"
                    android:backgroundTint="@color/white"
                    style="@style/edit_text_style"
                    android:inputType="textMultiLine"
                    android:gravity="top"/>
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Save/Exit"
                    android:onClick="exitQuote"
                    android:id="@+id/exit_quote_btn"
                    style="@style/button_style"
                    android:layout_margin="2dp"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Add"
                    android:onClick="addQuote"
                    android:id="@+id/add_quote_btn"
                    style="@style/button_style"
                    android:layout_margin="2dp"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
