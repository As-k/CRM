<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/browse_cardView"
    android:layout_marginTop="3dp"
    android:layout_marginRight="1dp"
    android:layout_marginLeft="1dp"
    app:cardBackgroundColor="@color/project_color"
    app:cardElevation="2dp"
    app:cardCornerRadius="1dp"
    app:cardUseCompatPadding="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/timeline_textView"
            style="@style/text_view_style"
            android:text="Information systems management"
            android:textColor="#3c4650"
            android:textSize="12sp"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/timeline_imageView"
            android:src="@drawable/ic_launcher_background"
            android:visibility="gone"/>


    </LinearLayout>

</android.support.v7.widget.CardView>